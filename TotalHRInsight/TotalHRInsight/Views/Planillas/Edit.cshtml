@model TotalHRInsight.DAL.Planilla

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-inicio {
        background-color: #B42D29;
        border-color: #B42D29;
        color: #FAFCFD;
    }
</style>

<h1>Editar</h1>

<h4>Planilla</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPlanilla" />
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label">Fecha de Inicio</label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label">Fecha de Fin</label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoTotal" class="control-label">Monto Total</label>
                <input asp-for="MontoTotal" class="form-control" />
                <span asp-validation-for="MontoTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioCrecionId" class="control-label">ID de Usuario de Creación</label>
                <input asp-for="UsuarioCrecionId" class="form-control" />
                <span asp-validation-for="UsuarioCrecionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAsistencia" class="control-label">ID de Asistencia</label>
                <input asp-for="IdAsistencia" class="form-control" />
                <span asp-validation-for="IdAsistencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPermiso" class="control-label">ID de Permiso</label>
                <input asp-for="IdPermiso" class="form-control" />
                <span asp-validation-for="IdPermiso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-inicio">Guardar Cambios</button>
                <a asp-action="Index">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
