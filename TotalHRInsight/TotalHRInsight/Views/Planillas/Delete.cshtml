@model TotalHRInsight.DAL.Planilla

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Planilla</h1>

<h3>¿Estás seguro de que quieres eliminar esto?</h3>
<div>
    <h4>Planilla</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MontoTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioCrecionId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioCrecionId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdAsistencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdAsistencia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPermiso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPermiso)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPlanilla" />
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Index">Volver a la Lista</a>
    </form>
</div>
