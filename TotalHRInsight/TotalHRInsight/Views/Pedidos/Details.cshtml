@model TotalHRInsight.DAL.Pedido

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-inicio {
        background-color: #B42D29;
        border-color: #B42D29;
        color: #FAFCFD;
    }
</style>

<h1>Detalles del Pedido</h1>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaPedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadPedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantidadPedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MontoTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioCrecionId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioCrecionId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdSucursal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdSucursal)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-inicio" asp-action="Edit" asp-route-id="@Model?.IdPedido">Editar</a>
    <a class="btn btn-primary" asp-action="Index">Volver a la Lista</a>
</div>
