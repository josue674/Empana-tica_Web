@model IEnumerable<TotalHRInsight.DAL.Permiso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-inicio {
        background-color: #B42D29;
        border-color: #B42D29;
        color: #FAFCFD;
    }
</style>

<h1>Permisos</h1>

<p>
    <a class="btn btn-inicio" asp-action="Create">Crear Nuevo</a>
    <a class="btn btn-inicio">Informe</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Fecha de Inicio
            </th>
            <th>
                Fecha de Fin
            </th>
            <th>
                Tipo de Permiso
            </th>
            <th>
                Cantidad de Días
            </th>
            <th>
                Estado
            </th>
            <th>
                ID de Usuario de Creación
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoPermiso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadDias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioCrecionId)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.idPermisos">Editar</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.idPermisos">Detalles</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.idPermisos">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
