@model IEnumerable<TotalHRInsight.DAL.Producto>

@{
    ViewData["Title"] = "Índice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-inicio {
        background-color: #B42D29;
        border-color: #B42D29;
        color: #FAFCFD;
    }
</style>

<h1>Índice</h1>

<p>
    <a asp-action="Create" class="btn btn-inicio">Crear Nuevo</a>
    <a class="btn btn-inicio">Importar Datos</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    Nombre del Producto
                </th>
                <th>
                    Descripción
                </th>
                <th>
                    Cantidad Disponible
                </th>
                <th>
                    Fecha de Vencimiento
                </th>
                <th>
                    Precio Unitario
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadDisponible)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaVencimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioUnitario)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<h2>Información de Proveedores</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    Proveedor
                </th>
                <th>
                    Contacto
                </th>
                <th>
                    Términos
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Proveedor A</td>
                <td>contacto@proveedora.com</td>
                <td>30 días de crédito</td>
            </tr>
            <tr>
                <td>Proveedor B</td>
                <td>info@proveedorb.com</td>
                <td>Pago anticipado</td>
            </tr>
        </tbody>
    </table>
</div>

<div>
    <a class="btn btn-inicio textalign-content-center">Informes</a>
</div>
